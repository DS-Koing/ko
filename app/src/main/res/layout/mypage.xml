<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="마이페이지"
            android:titleTextAppearance="@style/ActionBar.nameText" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:outlineSpotShadowColor="@color/white"
            app:cardCornerRadius="20dp"
            app:strokeColor="#D9D9D9"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mypage_btn_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/shape"
                    android:clickable="true"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/mypage_tv_name"
                    android:layout_marginLeft="10dp"
                    android:text="닉네임(ID)"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mypage_btn_fav"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:outlineSpotShadowColor="@color/white"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/stroke"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="28dp"
                    android:text="찜한 메뉴"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mypage_btn_history"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:outlineSpotShadowColor="@color/white"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/stroke"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="28dp"
                    android:text="주문 내역"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginVertical="15dp" />

        <TextView
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="앱 설정" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mypage_btn_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:outlineSpotShadowColor="@color/white"
            app:cardCornerRadius="15dp"
            app:strokeColor="@color/stroke"
            app:strokeWidth="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:text="환경설정"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </com.google.android.material.card.MaterialCardView>

        <View
            style="@style/Divider"
            android:layout_marginVertical="15dp" />

        <TextView
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="앱 설정" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mypage_btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:outlineSpotShadowColor="@color/white"
            app:cardCornerRadius="15dp"
            app:strokeColor="@color/stroke"
            app:strokeWidth="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:text="로그아웃"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mypage_btn_delAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:outlineSpotShadowColor="@color/white"
            app:cardCornerRadius="15dp"
            app:strokeColor="@color/stroke"
            app:strokeWidth="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:text="회원탈퇴"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </com.google.android.material.card.MaterialCardView>

        <View
            style="@style/Divider"
            android:layout_marginVertical="15dp" />
    </LinearLayout>

</RelativeLayout>
