<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:end="-0.4dp"
        android:start="-0.4dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>

